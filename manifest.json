{
  "manifest_version": 2,
  "name": "Copy page link",
  "version": "1.1",
  "description": "Copy page link to clipboard",
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "icons": {
    "48": "icons/icon-48.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "64": "icons/icon-64.png"
    }
  },
  "permissions": [
    "contextMenus",
    "clipboardWrite"
  ]
}